<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.android.customview.CustomViewActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.s.android.hiandroid.ui.android.customview.CustomView1
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.s.android.hiandroid.ui.android.customview.CustomView2
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <com.s.android.hiandroid.ui.android.customview.CustomView3
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>